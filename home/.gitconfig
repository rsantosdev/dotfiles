[user]
	name = Glenn Morton
	email = glenn@sandcastle.io

[github]
  user = sandcastle

[alias]
  br = branch
  cb = "!sh -c 'git branch $1 && git ch $1' -"
  ctb = "!sh -c 'git cb topics/$1' -"

  ci = commit
  ch = checkout
  fc = commit -am 'Initial commit.'
  cpush = "!sh -c 'git commit -au -m \"$1\" && git push -u origin' -"
  d = diff
  st = status --short

  graph = log --graph
  last = log -n 10
  url = !git remote -v|sed "'s|.*git[:@]\\(.*\\).git.*|http://\\1|;s|m:|m/|'"|uniq|xargs open
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
  discard = checkout -- .
  rmtag = "!sh -c 'git tag -d $1; git push origin :refs/tags/$1'"

  changelog = !sh "$HOME/dev/.files/git-extras/git-changelog.sh"
  rstatus   = !zsh "$HOME/dev/.files/git-extras/git-rstatus.sh"
  release   = !sh "$HOME/dev/.files/git-extras/git-release.sh"
  setup     = !zsh "$HOME/dev/.files/git-extras/git-setup.sh"
  summary   = !zsh "$HOME/dev/.files/git-extras/git-summary.sh"
  delete-branch = !sh "$HOME/dev/.files/git-extras/git-delete-branch.sh"

  pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1; } ; f"

  ghfork = !sh "$HOME/dev/.files/git-extras/git-ghpull.sh"
  cleanup = !ruby "$HOME/dev/.files/git-extras/git-cleanup.rb"

[push]
  default = current

[color]
  ui = true

[core]
  editor = brackets
  excludesfile = ~/.gitignore

[format]
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
  graph = true

[advice]
  statusHints = false

[log]
  abbrevCommit = true

# URL shorthands
# gh:sandcastle/dotfiles
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "gh:"
  pushInsteadOf = "git://github.com/"

# gist:3928760
[url "git@gist.github.com:"]
  insteadOf = "gist:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[mergetool]
	keepBackup = false

[init]
	templatedir = ~/.git_template

[ghi]
	token = !security find-internet-password -a sandcastle -s github.com -l 'ghi token' -w
